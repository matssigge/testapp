group :development, :test do
  gem 'byebug', platform: :mri
  gem 'rspec-rails'

  # Necessary for controller spec using "assigns".
  # However, if this is removed, neither haml nor bugsnag gem make the view spec fail.
  gem 'rails-controller-testing'
end

group :development do
  gem 'web-console'
  gem 'listen', '~> 3.0.5'
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
end

gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

